{
    "version": 2,
    "builds": [
        {
            "src": "./src/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/**"
                ]
            }
        },
        {
            "src": "./src/view/assets/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/((?!.*\\.\\w+$).*)",
            "dest": "/src/index.js"
          },
          {
            "src": "/assets/(.+\\.[a-z]+)$",
            "dest": "./src/view/assets/$1"
          }
    ]
}